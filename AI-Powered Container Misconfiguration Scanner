apiVersion: v1
kind: Pod
metadata:
  name: nginx-test
spec:
  containers:
  - name: nginx
    image: nginx:latest
    securityContext:
      privileged: true
    ports:
    - containerPort: 80
  hostNetwork: true
  automountServiceAccountToken: true
"""

